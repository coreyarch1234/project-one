<div class="container">
    <div class="col-sm-offset-3 col-sm-6">
        <legend>Register</legend>
        <form id='signup'>
            <div class="form-group">
                <label for='name'>Name</label>
                <input type="text" name='first' class="form-control" id="first" placeholder="first name"><br>
                <input type="text" name='last' class="form-control" id="last" placeholder="last name">
            </div>
            <input type="email" name='email' class="form-control" id="email" placeholder="Email"><br>
            <input type="password" name='password' class="form-control" id="password" placeholder="Password"><br>
            <button type='submit'>Register</button>
        </form>
    </div>
</div>
